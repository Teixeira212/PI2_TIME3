{
  "compilerOptions": {
    "typeRoots": ["./node_modules/@types"],
    "types": ["node", "express"],
    "target": "ESNext",
    "lib": [],
    "module": "commonjs",
    "rootDir": "./",
    "resolveJsonModule": true,
    "outDir": "./build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
  },

  "include": [
    "src",
    "package.json",
    "src/types/global.d.ts"
  ]
}
